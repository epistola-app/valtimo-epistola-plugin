{
    "display": "form",
    "components": [
        {
            "key": "pv:epistolaStatus",
            "type": "textfield",
            "input": true,
            "label": "Generatie Status",
            "disabled": true
        },
        {
            "key": "pv:epistolaDocumentId",
            "type": "textfield",
            "input": true,
            "label": "Document ID",
            "disabled": true
        },
        {
            "key": "pv:epistolaTenantId",
            "type": "hidden",
