{
  "slug": "subsidiebesluit",
  "name": "Subsidiebesluit",
  "version": "1.0.0",
  "dataModel": {
    "type": "object",
    "properties": {
      "beneficiary": {
        "type": "object",
        "description": "Gegevens van de subsidieaanvrager",
        "properties": {
          "name": {
            "type": "string",
            "description": "Naam van de aanvrager"
          },
          "address": {
            "type": "object",
            "properties": {
              "street": {
                "type": "string",
                "description": "Straatnaam"
              },
              "houseNumber": {
                "type": "string",
                "description": "Huisnummer"
              },
              "postalCode": {
                "type": "string",
                "pattern": "^[0-9]{4}[A-Z]{2}$",
                "description": "Postcode"
              },
              "city": {
                "type": "string",
                "description": "Plaatsnaam"
              }
            },
            "required": ["street", "houseNumber", "postalCode", "city"]
          }
        },
        "required": ["name", "address"]
      },
      "subsidy": {
        "type": "object",
        "description": "Gegevens van de subsidieaanvraag",
        "properties": {
          "programName": {
            "type": "string",
            "description": "Naam van het subsidieprogramma"
          },
          "amount": {
            "type": "number",
            "description": "Subsidiebedrag in euro's",
            "minimum": 0
          },
          "decision": {
            "type": "string",
            "enum": ["toegekend", "afgewezen"],
            "description": "Beslissing op de aanvraag"
          },
          "conditions": {
            "type": "string",
            "description": "Voorwaarden verbonden aan de subsidie (optioneel)"
          }
        },
        "required": ["programName", "amount", "decision"]
      }
    },
    "required": ["beneficiary", "subsidy"]
  },
  "dataExamples": [
    {
      "id": "toegekend-met-voorwaarden",
      "name": "Toegekend met voorwaarden",
      "data": {
        "beneficiary": {
          "name": "Stichting De Groene Toekomst",
          "address": {
            "street": "Keizersgracht",
            "houseNumber": "274",
            "postalCode": "1016EV",
            "city": "Amsterdam"
          }
        },
        "subsidy": {
          "programName": "Regeling Duurzame Energie Initiatieven 2026",
          "amount": 45000.00,
          "decision": "toegekend",
          "conditions": "De subsidie dient uiterlijk op 31 december 2026 te zijn besteed aan de in de aanvraag beschreven activiteiten. Binnen zes maanden na afronding van het project dient een inhoudelijk en financieel verslag te worden ingediend. De subsidieontvanger is verplicht om een deugdelijke administratie bij te houden van alle aan het project gerelateerde kosten."
        }
      }
    },
    {
      "id": "toegekend-zonder-voorwaarden",
      "name": "Toegekend zonder voorwaarden",
      "data": {
        "beneficiary": {
          "name": "Sportvereniging Voorwaarts",
          "address": {
            "street": "Sportlaan",
            "houseNumber": "12",
            "postalCode": "3511BK",
            "city": "Utrecht"
          }
        },
        "subsidy": {
          "programName": "Subsidieregeling Breedtesport 2026",
          "amount": 7500.00,
          "decision": "toegekend"
        }
      }
    },
    {
      "id": "afgewezen",
      "name": "Afgewezen aanvraag",
      "data": {
        "beneficiary": {
          "name": "Culturele Vereniging Het Podium",
          "address": {
            "street": "Marktplein",
            "houseNumber": "8a",
            "postalCode": "5611EB",
            "city": "Eindhoven"
          }
        },
        "subsidy": {
          "programName": "Stimuleringsregeling Culturele Activiteiten 2026",
          "amount": 25000.00,
          "decision": "afgewezen"
        }
      }
    }
  ],
  "templateModel": {
    "modelVersion": 1,
    "root": "n-root",
    "themeRef": { "type": "inherit" },
    "pageSettingsOverride": {
      "format": "A4",
      "orientation": "portrait",
      "margins": { "top": 40, "right": 40, "bottom": 40, "left": 40 }
    },
    "documentStylesOverride": {
      "fontFamily": "Helvetica",
      "fontSize": "10pt",
      "color": "#333333",
      "lineHeight": "1.5"
    },
    "nodes": {
      "n-root": {
        "id": "n-root",
        "type": "root",
        "slots": ["s-root-children"]
      },

      "n-header": {
        "id": "n-header",
        "type": "container",
        "slots": ["s-header-children"],
        "styles": {
          "marginBottom": "24px",
          "paddingBottom": "16px",
          "borderBottom": "2px solid #154273"
        }
      },
      "n-municipality": {
        "id": "n-municipality",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "11pt",
          "fontWeight": "bold",
          "color": "#154273",
          "marginBottom": "4px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Gemeente Voorbeeld" }
                ]
              }
            ]
          }
        }
      },
      "n-department": {
        "id": "n-department",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "9pt",
          "color": "#666666",
          "marginBottom": "16px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Afdeling Subsidies en Maatschappelijke Ontwikkeling" }
                ]
              }
            ]
          }
        }
      },

      "n-address-block": {
        "id": "n-address-block",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "10pt",
          "marginBottom": "24px",
          "lineHeight": "1.6"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "expression", "attrs": { "expression": "beneficiary.name" } },
                  { "type": "hard_break" },
                  { "type": "expression", "attrs": { "expression": "beneficiary.address.street" } },
                  { "type": "text", "text": " " },
                  { "type": "expression", "attrs": { "expression": "beneficiary.address.houseNumber" } },
                  { "type": "hard_break" },
                  { "type": "expression", "attrs": { "expression": "beneficiary.address.postalCode" } },
                  { "type": "text", "text": " " },
                  { "type": "expression", "attrs": { "expression": "beneficiary.address.city" } }
                ]
              }
            ]
          }
        }
      },

      "n-date-ref": {
        "id": "n-date-ref",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "9pt",
          "color": "#666666",
          "marginBottom": "24px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Datum: " },
                  { "type": "expression", "attrs": { "expression": "$now('[D] [MNn] [Y]', 'nl')", "language": "jsonata" } }
                ]
              }
            ]
          }
        }
      },

      "n-subject": {
        "id": "n-subject",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "11pt",
          "fontWeight": "bold",
          "marginBottom": "20px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Betreft: Besluit op uw subsidieaanvraag " },
                  { "type": "expression", "attrs": { "expression": "subsidy.programName" } }
                ]
              }
            ]
          }
        }
      },

      "n-salutation": {
        "id": "n-salutation",
        "type": "text",
        "slots": [],
        "styles": {
          "marginBottom": "12px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Geachte heer/mevrouw," }
                ]
              }
            ]
          }
        }
      },

      "n-intro": {
        "id": "n-intro",
        "type": "text",
        "slots": [],
        "styles": {
          "marginBottom": "12px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Op grond van uw aanvraag voor een subsidie in het kader van de " },
                  { "type": "expression", "attrs": { "expression": "subsidy.programName" } },
                  { "type": "text", "text": " delen wij u het volgende mede." }
                ]
              }
            ]
          }
        }
      },

      "n-decision-granted": {
        "id": "n-decision-granted",
        "type": "conditional",
        "slots": ["s-decision-granted-children"],
        "props": {
          "condition": {
            "raw": "subsidy.decision = 'toegekend'",
            "language": "jsonata"
          }
        }
      },
      "n-granted-text": {
        "id": "n-granted-text",
        "type": "text",
        "slots": [],
        "styles": {
          "marginBottom": "12px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Wij hebben besloten uw aanvraag " },
                  { "type": "text", "text": "toe te kennen", "marks": [{ "type": "bold" }] },
                  { "type": "text", "text": ". Aan " },
                  { "type": "expression", "attrs": { "expression": "beneficiary.name" } },
                  { "type": "text", "text": " wordt een subsidie verleend van " },
                  { "type": "text", "marks": [{ "type": "bold" }], "text": "\u20ac " },
                  { "type": "expression", "attrs": { "expression": "subsidy.amount" } },
                  { "type": "text", "text": " ten behoeve van de activiteiten zoals beschreven in uw aanvraag." }
                ]
              }
            ]
          }
        }
      },

      "n-decision-rejected": {
        "id": "n-decision-rejected",
        "type": "conditional",
        "slots": ["s-decision-rejected-children"],
        "props": {
          "condition": {
            "raw": "subsidy.decision = 'afgewezen'",
            "language": "jsonata"
          }
        }
      },
      "n-rejected-text": {
        "id": "n-rejected-text",
        "type": "text",
        "slots": [],
        "styles": {
          "marginBottom": "12px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Wij hebben besloten uw aanvraag " },
                  { "type": "text", "text": "af te wijzen", "marks": [{ "type": "bold" }] },
                  { "type": "text", "text": ". Het aangevraagde bedrag van " },
                  { "type": "text", "marks": [{ "type": "bold" }], "text": "\u20ac " },
                  { "type": "expression", "attrs": { "expression": "subsidy.amount" } },
                  { "type": "text", "text": " wordt niet verleend. De reden hiervoor is dat uw aanvraag niet voldoet aan de criteria zoals gesteld in de " },
                  { "type": "expression", "attrs": { "expression": "subsidy.programName" } },
                  { "type": "text", "text": "." }
                ]
              }
            ]
          }
        }
      },

      "n-conditions-section": {
        "id": "n-conditions-section",
        "type": "conditional",
        "slots": ["s-conditions-children"],
        "props": {
          "condition": {
            "raw": "$exists(subsidy.conditions)",
            "language": "jsonata"
          }
        }
      },
      "n-conditions-header": {
        "id": "n-conditions-header",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "11pt",
          "fontWeight": "bold",
          "marginTop": "16px",
          "marginBottom": "8px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Voorwaarden" }
                ]
              }
            ]
          }
        }
      },
      "n-conditions-text": {
        "id": "n-conditions-text",
        "type": "text",
        "slots": [],
        "styles": {
          "marginBottom": "12px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Aan deze subsidieverlening zijn de volgende voorwaarden verbonden:" }
                ]
              },
              {
                "type": "paragraph",
                "content": [
                  { "type": "expression", "attrs": { "expression": "subsidy.conditions" } }
                ]
              }
            ]
          }
        }
      },

      "n-objection": {
        "id": "n-objection",
        "type": "text",
        "slots": [],
        "styles": {
          "marginTop": "20px",
          "marginBottom": "12px",
          "fontSize": "9pt",
          "color": "#666666"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Indien u het niet eens bent met dit besluit kunt u binnen zes weken na dagtekening van deze brief een bezwaarschrift indienen bij het college van burgemeester en wethouders van Gemeente Voorbeeld, Postbus 1000, 1000AA Voorbeeld." }
                ]
              }
            ]
          }
        }
      },

      "n-closing": {
        "id": "n-closing",
        "type": "text",
        "slots": [],
        "styles": {
          "marginTop": "24px",
          "lineHeight": "1.8"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Hoogachtend," },
                  { "type": "hard_break" },
                  { "type": "hard_break" },
                  { "type": "hard_break" },
                  { "type": "text", "text": "Burgemeester en wethouders van Gemeente Voorbeeld," },
                  { "type": "hard_break" },
                  { "type": "text", "text": "namens dezen," },
                  { "type": "hard_break" },
                  { "type": "hard_break" },
                  { "type": "text", "text": "Het hoofd van de afdeling Subsidies en Maatschappelijke Ontwikkeling" }
                ]
              }
            ]
          }
        }
      }
    },

    "slots": {
      "s-root-children": {
        "id": "s-root-children",
        "nodeId": "n-root",
        "name": "children",
        "children": [
          "n-header",
          "n-address-block",
          "n-date-ref",
          "n-subject",
          "n-salutation",
          "n-intro",
          "n-decision-granted",
          "n-decision-rejected",
          "n-conditions-section",
          "n-objection",
          "n-closing"
        ]
      },
      "s-header-children": {
        "id": "s-header-children",
        "nodeId": "n-header",
        "name": "children",
        "children": ["n-municipality", "n-department"]
      },
      "s-decision-granted-children": {
        "id": "s-decision-granted-children",
        "nodeId": "n-decision-granted",
        "name": "children",
        "children": ["n-granted-text"]
      },
      "s-decision-rejected-children": {
        "id": "s-decision-rejected-children",
        "nodeId": "n-decision-rejected",
        "name": "children",
        "children": ["n-rejected-text"]
      },
      "s-conditions-children": {
        "id": "s-conditions-children",
        "nodeId": "n-conditions-section",
        "name": "children",
        "children": ["n-conditions-header", "n-conditions-text"]
      }
    }
  },
  "variants": [
    {
      "id": "default",
      "title": "Standaard",
      "attributes": {
        "language": "nl"
      }
    }
  ],
  "publishTo": ["production"]
}
