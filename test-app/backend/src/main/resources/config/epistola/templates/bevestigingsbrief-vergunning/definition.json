{
  "slug": "bevestigingsbrief-vergunning",
  "name": "Bevestigingsbrief Omgevingsvergunning",
  "version": "1.0.0",
  "dataModel": {
    "type": "object",
    "properties": {
      "applicant": {
        "type": "object",
        "description": "Gegevens van de aanvrager",
        "properties": {
          "firstName": {
            "type": "string",
            "description": "Voornaam"
          },
          "lastName": {
            "type": "string",
            "description": "Achternaam"
          },
          "bsn": {
            "type": "string",
            "pattern": "^\\d{9}$",
            "description": "Burgerservicenummer (9 cijfers)"
          },
          "address": {
            "type": "object",
            "description": "Adresgegevens aanvrager",
            "properties": {
              "street": { "type": "string" },
              "houseNumber": { "type": "string" },
              "postalCode": { "type": "string", "pattern": "^\\d{4}\\s?[A-Z]{2}$" },
              "city": { "type": "string" }
            },
            "required": ["street", "houseNumber", "postalCode", "city"]
          }
        },
        "required": ["firstName", "lastName", "bsn", "address"]
      },
      "property": {
        "type": "object",
        "description": "Gegevens van het bouwobject",
        "properties": {
          "address": {
            "type": "object",
            "description": "Adres van het bouwobject",
            "properties": {
              "street": { "type": "string" },
              "houseNumber": { "type": "string" },
              "postalCode": { "type": "string", "pattern": "^\\d{4}\\s?[A-Z]{2}$" },
              "city": { "type": "string" }
            },
            "required": ["street", "houseNumber", "postalCode", "city"]
          },
          "kadastraalNummer": {
            "type": "string",
            "description": "Kadastraal nummer (optioneel)"
          }
        },
        "required": ["address"]
      },
      "activities": {
        "type": "array",
        "description": "Vergunde activiteiten",
        "items": {
          "type": "object",
          "properties": {
            "type": {
              "type": "string",
              "description": "Type activiteit"
            },
            "description": {
              "type": "string",
              "description": "Omschrijving activiteit"
            },
            "estimatedCost": {
              "type": "number",
              "description": "Geschatte kosten (optioneel)",
              "minimum": 0
            }
          },
          "required": ["type", "description"]
        },
        "minItems": 1
      }
    },
    "required": ["applicant", "property", "activities"]
  },
