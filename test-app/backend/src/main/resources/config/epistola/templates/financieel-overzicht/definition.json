{
  "slug": "financieel-overzicht",
  "name": "Financieel Overzicht Subsidie",
  "version": "1.0.0",
  "dataModel": {
    "type": "object",
    "properties": {
      "beneficiary": {
        "type": "object",
        "description": "Gegevens van de subsidieaanvrager",
        "properties": {
          "name": {
            "type": "string",
            "description": "Naam van de aanvrager"
          }
        },
        "required": ["name"]
      },
      "subsidy": {
        "type": "object",
        "description": "Gegevens van de subsidie",
        "properties": {
          "programName": {
            "type": "string",
            "description": "Naam van het subsidieprogramma"
          },
          "amount": {
            "type": "number",
            "description": "Subsidiebedrag in euro's",
            "minimum": 0
          }
        },
        "required": ["programName", "amount"]
      }
    },
    "required": ["beneficiary", "subsidy"]
  },
  "dataExamples": [
    {
      "id": "standaard-overzicht",
      "name": "Standaard financieel overzicht",
      "data": {
        "beneficiary": {
          "name": "Stichting De Groene Toekomst"
        },
        "subsidy": {
          "programName": "Regeling Duurzame Energie Initiatieven 2026",
          "amount": 45000.00
        }
      }
    },
    {
      "id": "klein-bedrag",
      "name": "Klein subsidiebedrag",
      "data": {
        "beneficiary": {
          "name": "Buurtvereniging De Samenkomst"
        },
        "subsidy": {
          "programName": "Subsidieregeling Wijkinitiatieven 2026",
          "amount": 2500.00
        }
      }
    }
  ],
  "templateModel": {
    "modelVersion": 1,
    "root": "n-root",
    "themeRef": { "type": "inherit" },
    "pageSettingsOverride": {
      "format": "A4",
      "orientation": "portrait",
      "margins": { "top": 40, "right": 40, "bottom": 40, "left": 40 }
    },
    "documentStylesOverride": {
      "fontFamily": "Helvetica",
      "fontSize": "10pt",
      "color": "#333333",
      "lineHeight": "1.5"
    },
    "nodes": {
      "n-root": {
        "id": "n-root",
        "type": "root",
        "slots": ["s-root-children"]
