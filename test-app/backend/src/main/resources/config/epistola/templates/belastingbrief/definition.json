{
  "slug": "belastingbrief",
  "name": "Belastingaanslag Gemeentelijke Heffingen",
  "version": "1.0.0",
  "dataModel": {
    "type": "object",
    "properties": {
      "name": {
        "type": "string",
        "description": "Naam belastingplichtige"
      },
      "address": {
        "type": "object",
        "description": "Adresgegevens belastingplichtige",
        "properties": {
          "street": { "type": "string" },
          "houseNumber": { "type": "string" },
          "postalCode": { "type": "string", "pattern": "^\\d{4}\\s?[A-Z]{2}$" },
          "city": { "type": "string" }
        },
        "required": ["street", "houseNumber", "postalCode", "city"]
      },
      "bsn": {
        "type": "string",
        "pattern": "^\\d{9}$",
        "description": "Burgerservicenummer (9 cijfers)"
      },
      "taxAmount": {
        "type": "number",
        "description": "Totaalbedrag belastingaanslag in euro's",
        "minimum": 0
      }
    },
    "required": ["name", "address", "bsn", "taxAmount"]
  },
  "dataExamples": [
    {
      "id": "voorbeeld-standaard",
      "name": "Standaard belastingaanslag",
      "data": {
        "name": "P.J. Bakker",
        "address": {
          "street": "Prinsengracht",
          "houseNumber": "263",
          "postalCode": "1016 GV",
          "city": "Amsterdam"
        },
        "bsn": "234567891",
        "taxAmount": 1847.52
      }
    },
    {
      "id": "voorbeeld-laag-bedrag",
      "name": "Aanslag laag bedrag",
      "data": {
        "name": "A.M. van den Berg",
        "address": {
          "street": "Hofweg",
          "houseNumber": "9",
          "postalCode": "2511 AA",
          "city": "Den Haag"
        },
        "bsn": "345678912",
        "taxAmount": 412.00
      }
    }
  ],
  "templateModel": {
    "modelVersion": 1,
    "root": "n-root",
    "themeRef": { "type": "inherit" },
    "pageSettingsOverride": {
      "format": "A4",
      "orientation": "portrait",
      "margins": { "top": 40, "right": 40, "bottom": 40, "left": 40 }
    },
    "documentStylesOverride": {
      "fontFamily": "Helvetica",
      "fontSize": "10pt",
      "color": "#333333",
      "lineHeight": "1.5"
    },
    "nodes": {
      "n-root": {
        "id": "n-root",
        "type": "root",
        "slots": ["s-root-children"]
      },

      "n-header": {
        "id": "n-header",
        "type": "container",
        "slots": ["s-header-children"],
        "styles": {
          "marginBottom": "20px",
          "paddingBottom": "15px",
          "borderBottom": "2px solid #154273"
        }
      },
      "n-header-columns": {
        "id": "n-header-columns",
        "type": "columns",
        "slots": ["s-header-col-0", "s-header-col-1"],
        "props": {
          "columnSizes": [2, 1],
          "gap": 20
        }
      },
      "n-municipality": {
        "id": "n-municipality",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "16pt",
          "fontWeight": "bold",
          "color": "#154273"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Gemeente Amsterdam" }
                ]
              }
            ]
          }
        }
      },
      "n-department": {
        "id": "n-department",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "9pt",
          "color": "#555555",
          "lineHeight": "1.5"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Afdeling Belastingen" },
                  { "type": "hard_break" },
                  { "type": "text", "text": "Postbus 23475" },
                  { "type": "hard_break" },
                  { "type": "text", "text": "1100 DZ Amsterdam" }
                ]
              }
            ]
          }
        }
      },
      "n-header-date": {
        "id": "n-header-date",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "9pt",
          "textAlign": "right",
          "color": "#555555"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Datum: 1 maart 2026" }
                ]
              }
            ]
          }
        }
      },

      "n-recipient": {
        "id": "n-recipient",
        "type": "text",
        "slots": [],
        "styles": {
          "marginBottom": "25px",
          "fontSize": "10pt",
          "lineHeight": "1.6"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "expression", "attrs": { "expression": "name" } },
                  { "type": "hard_break" },
                  { "type": "expression", "attrs": { "expression": "address.street" } },
                  { "type": "text", "text": " " },
                  { "type": "expression", "attrs": { "expression": "address.houseNumber" } },
                  { "type": "hard_break" },
                  { "type": "expression", "attrs": { "expression": "address.postalCode" } },
                  { "type": "text", "text": " " },
                  { "type": "expression", "attrs": { "expression": "address.city" } }
                ]
              }
            ]
          }
        }
      },

      "n-subject": {
        "id": "n-subject",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "12pt",
          "fontWeight": "bold",
          "color": "#154273",
          "marginBottom": "20px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Betreft: Aanslag gemeentelijke belastingen 2026" }
                ]
              }
            ]
          }
        }
      },

      "n-salutation": {
        "id": "n-salutation",
        "type": "text",
        "slots": [],
        "styles": {
          "marginBottom": "15px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Geachte " },
                  { "type": "expression", "attrs": { "expression": "name" } },
                  { "type": "text", "text": "," }
                ]
              }
            ]
          }
        }
      },

      "n-intro": {
        "id": "n-intro",
        "type": "text",
        "slots": [],
        "styles": {
          "marginBottom": "15px"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Hierbij ontvangt u de aanslag gemeentelijke belastingen voor het belastingjaar 2026. Op basis van de bij ons bekende gegevens is het volgende bedrag vastgesteld." }
                ]
              }
            ]
          }
        }
      },

      "n-bsn-ref": {
        "id": "n-bsn-ref",
        "type": "text",
        "slots": [],
        "styles": {
          "marginBottom": "20px",
          "fontSize": "9pt",
          "color": "#555555"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "BSN: " },
                  { "type": "expression", "attrs": { "expression": "bsn" } }
                ]
              }
            ]
          }
        }
      },

      "n-amount-box": {
        "id": "n-amount-box",
        "type": "container",
        "slots": ["s-amount-box-children"],
        "styles": {
          "padding": "20px",
          "backgroundColor": "#f0f4f8",
          "borderRadius": "4px",
          "borderLeft": "4px solid #154273",
          "marginBottom": "25px"
        }
      },
      "n-amount-label": {
        "id": "n-amount-label",
        "type": "text",
        "slots": [],
        "styles": {
          "fontSize": "10pt",
          "fontWeight": "bold",
          "marginBottom": "8px",
          "color": "#154273"
        },
        "props": {
          "content": {
            "type": "doc",
            "content": [
              {
                "type": "paragraph",
                "content": [
                  { "type": "text", "text": "Totaalbedrag aanslag" }
                ]
              }
            ]
          }
        }
      },
      "n-amount-value": {
        "id": "n-amount-value",
        "type": "text",
        "slots": [],
